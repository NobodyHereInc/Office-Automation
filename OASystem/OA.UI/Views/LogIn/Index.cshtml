@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>OA SYSTEM LogIn Page</title>
    <script src="~/Scripts/jquery-3.1.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <recaptcha-script></recaptcha-script>
    <script type="text/javascript">
        $(function () {
            $("#btnLogin").click(function(){
                $("#loginForm").submit();
            });
        });

        function changeCheckCode() {
            $("#img").attr("src", $("#img").attr("src") + 1);
        }

        function afterLogin(data) {
            if (data == "Ok") {
                window.location.href = "/Home/Index";
            }
            else {
                $("#errorMsg").text(data).css("color", "red");
                changeCheckCode();
            }
        }
    </script>
    <style type="text/css">
        * {
            padding: 0;
            margin: 0;
        }

        body {
            text-align: center;
            background: #4974A4;
        }

        #login {
            width: 740px;
            margin: 0 auto;
            font-size: 12px;
        }

        #loginlogo {
            width: 700px;
            height: 100px;
            overflow: hidden;
            margin-top: 50px;
        }

        #loginpanel {
            width: 729px;
            position: relative;
            height: 300px;
        }

        .panel-h {
            width: 729px;
            height: 20px;
            background-image: url('/Content/images/login/panel-h.gif');
            background-repeat: no-repeat;
            position: absolute;
            top: 0px;
            left: 0px;
            z-index: 3;
        }

        .panel-f {
            width: 729px;
            height: 13px;
            background-image: url('/Content/images/login/panel-f.gif');
            background-repeat: no-repeat;
            position: absolute;
            bottom: 0px;
            left: 0px;
            z-index: 3;
        }

        .panel-c {
            z-index: 2;
            background-image: url('/Content/images/login/panel-c.gif');
            background-repeat: repeat-y;
            width: 729px;
            height: 300px;
        }

        .panel-c-l {
            position: absolute;
            left: 60px;
            top: 40px;
        }

        .panel-c-r {
            position: absolute;
            right: 20px;
            top: 50px;
            width: 222px;
            line-height: 200%;
            text-align: left;
        }

        .panel-c-l h3 {
            color: #556A85;
            margin-bottom: 10px;
        }

        .panel-c-l td {
            padding: 7px;
        }

        .login-text {
            height: 24px;
            left: 24px;
            border: 1px solid #e9e9e9;
            background: #f9f9f9;
        }

        .login-text-focus {
            border: 1px solid #E6BF73;
        }

        .login-btn {
            width: 114px;
            height: 29px;
            color: #E9FFFF;
            line-height: 29px;
            background-image: url('/Content/images/login/login-btn.gif');
            background-repeat: no-repeat;
            border: none;
            overflow: hidden;
            cursor: pointer;
        }

        #txtUsername, #code, #txtPassword {
            width: 191px;
        }

        #logincopyright {
            text-align: center;
            color: White;
            margin-top: 50px;
        }

        a {
            color: Black;
        }

            a:hover {
                color: Red;
                text-decoration: underline;
            }
    </style>


</head>
<body style="padding: 10px">
    <div id="login">
        <div id="loginlogo">
        </div>
        <div id="loginpanel">
            <div class="panel-h">
            </div>
            <div class="panel-c">
                <div class="panel-c-l">

                    <form action="CheckLogin" id="loginForm" data-ajax="true" data-ajax-method="POST" data-ajax-success="afterLogin">
                        <table cellpadding="0" cellspacing="0">
                            <tbody>
                                <tr>
                                    <td align="left" colspan="2">
                                        <h3>
                                            OA System LogIn
                                        </h3>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="right">
                                        Account Number：
                                    </td>
                                    <td align="left">
                                        <input type="text" name="LoginCode" id="LoginCode" class="login-text" value="walter" />
                                    </td>
                                </tr>
                                <tr>
                                    <td align="right">
                                        Pass Wrod：
                                    </td>
                                    <td align="left">
                                        <input type="password" name="LoginPwd" id="LoginPwd" value="7" class="login-text" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Captcha：
                                    </td>
                                    <td align="left">
                                        <input type="text" class="login-text" id="code" name="vCode" value="1" />
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>
                                        <img id="img" src="/Login/ValidateCode/?id=1" style="float: left; height: 24px;" />
                                        <div style="float: left; margin-left: 5px; margin-top: 10px;">
                                            <a href="javascript:void(0)" onclick="changeCheckCode();return false;">Not clear, Another one?</a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="center" colspan="2">
                                        <input type="submit" id="btnLogin" value="Log In" class="login-btn" /><a href="/Login/FindPwd">Forgot password?</a>
                                        @*<input type="checkbox" name="checkMe" value="1" />remember me*@
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td><span id="errorMsg" style="font-size:large"></span></td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
                <div class="panel-c-r">
                    <p>
                        - Please enter your login ID and password to log in from the left.
                    </p>
                    <p>
                        - If you experience problems , contact your network administrator.
                    </p>
                    <p>
                        - If there is no account , please contact the webmaster.
                    </p>
                    <p>
                        ......
                    </p>
                </div>
            </div>
            <div class="panel-f">
            </div>
        </div>
        <div id="logincopyright">
            Copyright@@ Walter3019 2016
        </div>
    </div>
</body>
</html>
